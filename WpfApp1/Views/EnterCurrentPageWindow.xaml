<Window x:Class="KindleReader.EnterCurrentPageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KindleReader"
        mc:Ignorable="d"
        Title="EnterCurrentPageWindow" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <Label FontSize="14" Content="Enter current page:"/>
            <TextBox x:Name="currentPageValue" Height="50" Width="150" HorizontalAlignment="Center"/>
            <Button Margin="0,5,30,10" x:Name="saveCurrentPageValue" Height="30" Width="60" HorizontalAlignment="Right" Content="Save" Click="saveCurrentPage"/>
        </StackPanel>
    </Grid>
</Window>
